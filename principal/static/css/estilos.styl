@import "_fonts"
@import "_var"
@import "_mixins"

* 	
	border 0
	margin 0
	padding 0
/*Elementos HTML */
body 
	background darken(gris2, 70%) url('../img/wallpaper-82838.jpg')
	background-repeat no-repeat
	font-family 'Open Sans', Arial, Verdana
	font-weight normal
	font-size 16px

footer 
	background gris3
	clear both
	height auto
	margin-top 10em
	width 100%

header, nav, .contenedor 
	margin 0 auto
	width 80%

header 
	background darken(gris2, 20%)
	height 40px * 4

/* Identifidores */
#arrow 
	height 15px
	margin .8em 0
	transform()
	width 15px

.buscar, .titulo 
	box-sizing()
	color blanco 
	display inline-block
	margin 1em 1em 
	vertical-align middle 
	width 50%

.buscar 
	padding .7em
	width 30%
	input[type=search]
		background gris2
		bordes(1em)
		font-weight bold
		sombras-caja(0 0 10px blanco2)
		padding .5em
		transicion()
		width 70%
		word-spacing 1.3em 
		&:hover 
			bordes(2em)
			transicion()
			width 80%

.conf_idiomas, .idiomas
	background darken(gris, 40%)
	box-sizing()
	font-family 'Open Sans', Verdana, Arial
	font-size()
	height 2.6em
	width 100%

.esp, .eng 
	display inline-block
	position relative
	top -20px
	vertical-align middle
	max-width 20%
	width 15%
	a 
		position relative 
		top -.5em

.fluid_container 
	margin 0 auto
	width 80%

.idiomas, .social_icons 
	display inline-block
	margin 0 auto
	text-align right 
	vertical-align middle 
	width 60%

.idiomas 
	margin 0 0 0 5em
	a 
		color blanco 
		text-decoration none
	img 
		height 28px
		margin 1em .3em 0 0
		position relative 
		top 1px
		width 30px

.logotipo 
	background blanco
	border .4em dotted azul
	bordes(999px)
	height 70px
	left 10px 
	position relative
	sombras-caja(.3em 0 .2em darken(blanco, 30%))
	top 30px
	width 70px
	&:hover 
		cursor pointer
		rotacion()
		transicion()

.social_icons
	height 2.6em
	text-align center
	width 20%
	a 
		text-decoration none
	img 
		margin 0.4em auto

.superior
	background transparent
	height 130px
	width 100%

.titulo 
	font-family 'Open Sans', Arial, Verdana 
	font-size 2em 
	text-shadow 0 .1em .2em azul

/* Mediaqueries 320 480 600 768 1024 1200 */
@media screen and (max-width: 1200px)
	footer 
		background rojizo 
	.esp, .eng
		max-width 20%
		width 17%
	.idiomas 
		margin 0 0 0 2em

@media screen and (max-width: 1024px)
	footer 
		background green
	.esp, .eng
		max-width 25%
		width 23%

@media screen and (max-width: 768px)
	footer 
		background blue
	.esp, .eng
		max-width 29%
		width 28%

@media screen and (max-width: 600px)
	footer 
		background cyan
	.esp, .eng
		max-width 36%
		width 36%
	.social_icons
		width 25%

@media screen and (max-width: 480px)
	footer 
		background magenta 
	.esp, .eng
		max-width 44%
		width 44%
	.idiomas 
		font-size .9em
		margin 0
		width 65%
	.social_icons
		width 33%

@media screen and (max-width: 320px)
	footer 
		background yellow 
	.idiomas 
		font-size .8em
	.social_icons
		img 
			height 30px 
			width 30px