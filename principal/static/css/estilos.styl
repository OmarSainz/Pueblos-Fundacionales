.wcont
	color darken(blanco, 20%)
	display inline-block
	text-align center
	vertical-align top
	width 24%
	ul 
		margin-top .5em
		margin-bottom .5em
	li 
		list-style none
		a 
			color darken(blanco, 50%)
			text-decoration none