@import "_fonts"
@import "_var"
@import "_mixins"

* 	
	border 0
	margin 0 
	padding 0


aside, .suscribete 
	border thin solid lighten(gris, 80%)
	display inline-block
	height 150px
	vertical-align top
	width 45%

aside 
	article 
		display inline-block
		margin 0 .3em 
		vertical-align top
	h3 
		color lighten(azul, 10%)

body 
	background darken(gris2, 70%) url('../img/wallpaper-82838.jpg')
	background-repeat no-repeat no-repeat
	font-family 'Open Sans', Arial, Verdana
	font-weight normal
	font-size 16px

h2 
	background lighten(gris, 85%)
	bordes(.2em)
	color saturate(azul, 30%)
	margin 1em 1em
	text-align center

h3 
	color saturate(amarillo, 30%)
	background lighten(gris, 85%)
	bordes(.2em)
	margin .5em 
	text-align center

footer 
	background darken(gris, 60%)
	margin 0 auto
	width 100%

header, nav, .contenedor 
	margin 0 auto
	width 80%

header 
	//background lighten(blanco, 20%) 
	background transparent
	height 40px * 4

nav
	background darken(gris, 20%)
	box-sizing()
	ul 
		text-align left
	li.menu
		menu azul 
		cursor pointer 
		display inline-block
		font-size 1.1em
		font-weight bold
		margin 0 auto
		padding .8em
		vertical-align top
		width 15%
		&:first-child
			background darken(azul, 30%)
		&:first-child:hover 
			background darken(azul, 40%)
			transicion()
		&:nth-child(2)
			background rojizo 
		&:nth-child(2):hover 
			background darken(rojizo, 40%)
			transicion()
		&:nth-child(3)
			background amarillo
		&:nth-child(3):hover 
			background darken(amarillo, 40%)
			transicion()
		&:nth-child(4)
			background cafe
		&:nth-child(4):hover 
			background darken(cafe, 40%)
			transicion()
		&:nth-child(5)
			background transparent
			width 5%
		&:last-child
			background azul
			text-align center 
			transicion()
		&:last-child:hover 
			background darken(gris, 40%)
			transicion()
		a 
			color darken(blanco, 10%) 
			text-decoration none
			text-shadow .1em .1em .2em negro
			&:hover 
				font-weight bold

/* Identificadores */
#arrow 
	height 15px
	margin .8em 0
	transform()
	width 15px

#locations 
	float left
	list-style none
	max-width 200px
	li 
		color blanco
		cursor pointer 
		height 50px
		margin .3em auto
		padding 10px
		max-width 180px
		&:first-child
			background darken(azul, 30%)
		&:first-child:hover 
			background darken(azul, 40%)
			transicion()
		&:nth-child(2)
			background rojizo 
		&:nth-child(2):hover 
			background darken(rojizo, 40%)
			transicion()
		&:nth-child(3)
			background amarillo
		&:nth-child(3):hover 
			background darken(amarillo, 40%)
			transicion()
		&:last-child
			background cafe 
		&:last-child:hover 
			background darken(cafe, 40%)
			transicion()

#map_canvas 
	width 100%
	height 350px 
	max-width 200px 
	float left 
	position relative 
	z-index 30 

#more-info 
	background lighten(#555, 80%)
	color darken(azul, 50%)
	float right
	font-size .8em
	font-weight normal
	padding .3em
	width 25%
	a 
		color azul
		text-decoration none

#page-wrap 
	margin: 0 auto
	max-width 95% 

#twitter, #facebook 
