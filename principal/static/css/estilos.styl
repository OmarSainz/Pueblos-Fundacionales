.modalDialog
	position fixed
	font-family Arial, Helvetica, sans-serif
	top 0 
	right -100 
	bottom 0
	background rgba(0, 0, 0, .8)
	z-index 99999
	opacity 0
	transicion_modal()
	pointer-events none
	width 100%
