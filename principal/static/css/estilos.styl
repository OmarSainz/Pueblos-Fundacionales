@import "_fonts"
@import "_var"
@import "_mixins"

* 	
	border 0
	margin 0 
	padding 0

body 
	background darken(gris2, 70%) url('../img/wallpaper-82838.jpg')
	background-repeat no-repeat no-repeat
	font-family 'Open Sans', Arial, Verdana
	font-weight normal
	font-size 16px

h2 
	background lighten(gris, 85%)
	bordes(.2em)
	color saturate(azul, 30%)
	margin 1em 1em
	text-align center

h3 
	color saturate(amarillo, 30%)
	background lighten(gris, 85%)
	bordes(.2em)
	margin .5em 
	text-align center

header, nav, .contenedor 
	margin 0 auto
	width 80%

header 
	background darken(gris2, 20%)
	height 40px * 4

nav
	background darken(gris, 20%)
	box-sizing()
	ul 
		text-align left
	li.menu
		menu azul 
		cursor pointer 
		display inline-block
		font-size 1.1em
		font-weight bold
		margin 0 auto
		padding .8em
		vertical-align top
		width 15%
		&:first-child
			background darken(azul, 30%)
		&:first-child:hover 
			background darken(azul, 40%)
			font-size 1.2em
			transicion()
		&:nth-child(2)
			background rojizo 
		&:nth-child(2):hover 
			background darken(rojizo, 40%)
			font-size 1.2em
			transicion()
		&:nth-child(3)
			background amarillo
		&:nth-child(3):hover 
			background darken(amarillo, 40%)
			font-size 1.2em
			transicion()
		&:nth-child(4)
			background cafe
		&:nth-child(4):hover 
			background darken(cafe, 40%)
			font-size 1.2em
			transicion()
		&:nth-child(5)
			background transparent
			width 5%
		&:last-child
			background azul
			text-align center 
			transicion()
		&:last-child:hover 
			background darken(gris, 40%)
			transicion()
		a 
			color darken(blanco, 10%) 
			text-decoration none
			text-shadow .1em .1em .2em negro
			&:hover 
				font-weight bold

/* Identificadores */
#arrow 
	height 15px
	margin .8em 0
	transform()
	width 15px

/*Clases */
.buscar, .titulo 
	box-sizing()
	color blanco 
	display inline-block
	margin 1em 1em 
	vertical-align middle 
	width 50%

.buscar 
	padding .7em
	width 30%

.contenedor
	background darken(blanco, 6%)
	height auto
	margin .6em auto
	sombras-caja(.1em .1em .1em blanco)

.contenido 
	font-size .7em
	height 120px
	margin .5em auto
	min-width 60%
	padding .7em
	max-width 90%
	a 
		color gris2
		font-family Verdana
		text-decoration none
	img 
		float left 
		height 80px 
		margin-right .7em
		width 80
	p 
		bordes(.4em)
		border thin solid lighten(gris, 80%)
		height 86px
		margin .2em auto 
		padding 1em 
		text-align justify
		&:hover 
			sombras-caja(0 .2em .4em darken(gris2, 10%))
	span 
		margin .5em
		a 
			color rojizo

.icono_buscar
	background gris2 url('../img/buscar.png') right no-repeat
	bordes(1em)
	font-weight bold
	sombras-caja(0 0 10px blanco2)
	padding .5em
	transicion()
	width 70%
	word-spacing 1.3em 
	&:hover 
		background blanco2
		bordes(2em)
		transicion()
		width 80%

.conf_idiomas, .idiomas
	background darken(gris, 40%)
	box-sizing()
	font-family 'Open Sans', Verdana, Arial
	font-size()
	height 2.6em
	width 100%

.enlaces-utiles, .telefonos
	border thin solid lighten(gris, 80%)
	bordes(.5em)
	box-sizing()
	display inline-block
	height 200px
	vertical-align top
	width 65%

.enlaces-utiles
	margin-left .3em
	p 
		display inline-block
		font-size .9em
		margin .5em auto
		margin-left 1em
		text-align left
		vertical-align top
		width 45%
		img 
			height 25px 
			margin .3em .3em .3em -.3em  
			width 25px
		a 
			color lighten(cafe, 10%)
			font-weight bold 
			margin-left 0
			position relative 
			top -.7em
			text-decoration none

.fluid_container 
	margin 0 auto
	width 80%

.idiomas, .social_icons 
	display inline-block
	margin 0 auto
	text-align right 
	vertical-align middle 
	width 60%

.idiomas 
	margin 0 0 0 5em
	a 
		color blanco 
		text-decoration none
	img 
		height 28px
		margin 1em .3em 0 0
		position relative 
		top 1px
		width 30px
.esp, .eng 
	display inline-block
	position relative
	top -20px
	vertical-align middle
	max-width 20%
	width 15%
	a 
		position relative 
		top -.5em

.logotipo 
	background blanco
	border .4em dotted azul
	bordes(999px)
	height 70px
	left 10px 
	position relative
	sombras-caja(.3em 0 .2em darken(blanco, 30%))
	top 30px
	width 70px
	&:hover 
		cursor pointer
		rotacion()
		transicion()

.menu-lateral, .principal
	background darken(blanco, 6%)
	color darken(blanco, 70%)
	display inline-block
	height 1410px
	margin-right .2em 
	vertical-align top
	max-width 45%

.menu-lateral
	max-width 53.5%
	h2 
		color lighten(rojizo, 10%)

.principal 
	sombras-caja(.3em 0 .1em darken(blanco, 12%))

.recomendaciones
	text-align center
	img 
		height 120px 
		width 90%

.social_icons
	height 2.6em
	text-align center
	width 20%
	a 
		text-decoration none
	img 
		margin 0.4em auto
		
.superior
	background transparent
	height 130px
	width 100%

.telefonos 
	font-size .9em
	text-align center
	width 30%
	a 
		color lighten(rojizo, 10%)
		text-decoration none
	img 
		height 80px
		margin-top .5em 
		margin-bottom .5em
		width 80px
			
.titulo 
	font-family 'Open Sans', Arial, Verdana 
	font-size 2em 
	text-shadow 0 .1em .2em azul