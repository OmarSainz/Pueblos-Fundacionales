@import "_fonts"
@import "_var"
@import "_mixins"

* 	
	border 0
	margin 0
	padding 0
/*Elementos HTML */
body 
	background darken(gris2, 70%) url('../img/wallpaper-82838.jpg')
	background-repeat no-repeat
	font-family 'Open Sans', Arial, Verdana
	font-weight normal
	font-size 16px

footer 
	background gris3
	clear both
	height auto
	margin-top 10em
	width 100%

h2 
	color saturate(azul, 30%)
	estilos_h()
	text-shadow .2em .2em .2em lighten(azul, 60%)

h3 
	color rojizo
	estilos_h()
	text-shadow .2em .2em .2em lighten(rojizo, 60%)

h4
	color amarillo
	estilos_h()
	text-decoration none
	text-shadow .2em .2em .2em lighten(amarillo, 60%)


header 
	background darken(gris2, 20%)
	height 40px * 4

header, nav, .contenedor 
	margin 0 auto
	width 80%

nav
	background darken(gris, 20%)
	box-sizing()
	ul 
		text-align left
	li.menu
		background azul 
		cursor pointer 
		display inline-block
		font-size 1.1em
		font-weight bold
		margin 0 auto
		padding .8em
		vertical-align top
		width 15%
		&:first-child 
			background darken(azul, 30%)
		&:first-child:hover 
			background darken(azul, 40%)
			font-size 1.2em
			transicion()
		&:nth-child(2)
			background rojizo 
		&:nth-child(2):hover 
			background darken(rojizo, 40%)
			font-size 1.2em
			transicion()
		&:nth-child(3)
			background amarillo
		&:nth-child(3):hover 
			background darken(amarillo, 40%)
			font-size 1.2em
			transicion()
		&:last-child
			background cafe 
		&:last-child:hover 
			background darken(cafe, 40%)
			font-size 1.2em
			transicion()
		a 
			color darken(blanco, 10%) 
			text-decoration none
			text-shadow .1em .1em .2em negro
			&:hover 
				font-weight bold
/* Identificadores */
#arrow 
	height 15px
	margin .8em 0
	transform()
	width 15px

/* Mapa de Google */

#locations 
	float left
	list-style none
	max-width 200px
	li 
		color blanco
		cursor pointer 
		height 50px
		margin .3em auto
		padding 10px
		max-width 180px
		&:first-child
			background darken(azul, 30%)
		&:first-child:hover 
			background darken(azul, 40%)
			transicion()
		&:nth-child(2)
			background rojizo 
		&:nth-child(2):hover 
			background darken(rojizo, 40%)
			transicion()
		&:nth-child(3)
			background amarillo
		&:nth-child(3):hover 
			background darken(amarillo, 40%)
			transicion()
		&:last-child
			background cafe 
		&:last-child:hover 
			background darken(cafe, 40%)
			transicion()

#map_canvas 
	width 100%
	height 350px 
	max-width 200px 
	float left 
	position relative 
	z-index 30 

#more-info 
	background lighten(#555, 80%)
	color darken(azul, 50%)
	float right
	font-size .8em
	padding .3em
	width 25%

#page-wrap 
	margin: 0 auto
	max-width 95% 


#weatherslider 
	width 95%
	height 310px


.buscar, .titulo 
	box-sizing()
	color blanco 
	display inline-block
	margin 1em 1em 
	vertical-align middle 
	width 50%

.buscar 
	padding .7em
	width 30%
	input[type=search]
		background gris2
		bordes(1em)
		font-weight bold
		sombras-caja(0 0 10px blanco2)
		padding .5em
		transicion()
		width 70%
		word-spacing 1.3em 
		&:hover 
			bordes(2em)
			transicion()
			width 80%

.calendario-eventos, .calendario-notas 
	display inline-block
	height 280px 
	vertical-align top 
	width 55%

.calendario-notas
	width 40%
	p
		font-size .8em
		margin 0 .4em
		text-align justify

.clima, .multimedia
	display inline-block 
	height 410px
	margin .8em auto
	sombras-caja(.3em 0 .2em darken(blanco, 30%))
	vertical-align top
	width 55%

.conf_idiomas, .idiomas
	background darken(gris, 40%)
	box-sizing()
	font-family 'Open Sans', Verdana, Arial
	font-size()
	height 2.6em
	width 100%

.contenedor
	background darken(blanco, 6%)
	height 1700px
	margin .6em auto
	sombras-caja(.1em .1em .1em blanco)

.contenido 
	font-size .7em
	height 120px
	margin .5em auto
	min-width 60%
	padding .7em
	max-width 90%
	a 
		color gris2
		font-family Verdana
		text-decoration none
	img 
		float left 
		margin-right .7em
	p 
		bordes(.4em)
		height 86px
		margin .2em auto 
		padding 1em 
		sombras-caja(.2em .2em .5em darken(gris2, 10%))
		text-align justify
	span 
		margin .5em
		a 
			color rojizo
.esp, .eng 
	display inline-block
	position relative
	top -20px
	vertical-align middle
	max-width 20%
	width 15%
	a 
		position relative 
		top -.5em

.enlaces-utiles, .telefonos
	border thin solid amarillo
	bordes(.5em)
	display inline-block
	height 225px
	vertical-align top
	width 65%

.enlaces-utiles
	margin-left .3em
	p 
		display inline-block
		font-size .9em
		margin .5em auto
		margin-left 1em
		text-align left
		vertical-align top
		width 45%
		img 
			height 25px 
			margin .3em .3em .3em -.3em  
			width 25px
		a 
			color lighten(cafe, 10%)
			font-weight bold 
			margin-left 0
			position relative 
			top -.7em
			text-decoration none

.eventos 
	height 300px 
	margin 0 auto 
	width 95%
	input[type="text"]
		background darken(blanco, 6%)
		color darken(blanco, 6%)
		width 230px


.fluid_container 
	margin 0 auto
	width 80%

.idiomas, .social_icons 
	display inline-block
	margin 0 auto
	text-align right 
	vertical-align middle 
	width 60%

.idiomas 
	margin 0 0 0 5em
	a 
		color blanco 
		text-decoration none
	img 
		height 28px
		margin 1em .3em 0 0
		position relative 
		top 1px
		width 30px

.logotipo 
	background blanco
	border .4em dotted azul
	bordes(999px)
	height 70px
	left 10px 
	position relative
	sombras-caja(.3em 0 .2em darken(blanco, 30%))
	top 30px
	width 70px
	&:hover 
		cursor pointer
		rotacion()
		transicion()

/* Mapa de Google */
.longdesc 
	display none

.mapa-misiones 
	height 480px
	margin .3em auto
	a 
		color cafe
		text-decoration none
		text-shadow .1em .2em .2em lighten(cafe, 70%)

.materiales, .relatos 
	display inline-block
	height 220px 
	margin -2em .8em 0 .8em
	sombras-caja(.3em 0 .2em darken(blanco, 30%))
	vertical-align top 
	width 36%

.materiales 
	sombras-caja()
	p 
		font-size .8em
		margin 0 .5em
		text-align justify
		a 
			color amarillo
			font-size 1.3em
			position relative 
			left 3em
			top 1em
			text-decoration none

.menu-lateral, .principal
	background darken(blanco, 6%)
	color darken(blanco, 70%)
	display inline-block
	height 1410px
	margin-right .2em 
	sombras-caja(.3em 0 .2em darken(blanco, 30%))
	vertical-align top
	max-width 45%

.menu-lateral
	max-width 53.5%

.multimedia
	width 41%
	p 
		font-size .8em
		margin .2em 1.4em
		text-align justify
		a 
			img 
				margin 2em .3em
				height 47px 
				width 47px
	span 
		padding .5em
		margin 0 4em
		a 
			color amarillo
			font-size 1.3em
			text-decoration none

.numerosTelefonicos
	font-size .8em
	margin 0 0.7em.2em .7em
	text-align center
	a 
		color lighten(rojizo, 20%)
		text-decoration none
		img 
			height 90px 
			width 90px

.proximos-eventos
	article 
		box-sizing()
		font-size .8em
		height 50px
		margin .2em 1.2em
		sombras-caja(0 0 .5em lighten(gris2, 80%))
		text-align justify
		p, a 
			display inline-block
			vertical-align top
		p 
			background azul 
			color blanco
			cursor pointer
			font-size 1.5em
			height 30px 
			padding .5em
			width 30px
		a 
			color azul
			margin-left .5em
			text-decoration none
	span 
		text-align center
		margin-top .5em
		margin-left 10em
		a 
			color rojizo
			text-decoration none

.recomendaciones
	text-align center
	img 
		height 120px 
		width 90%
.relatos 
	color gris2
	width 53%
	p 
		font-size .8em
		margin  0 .5em
		padding 0 .5em
		text-align justify
		a 
			color darken(blanco2, 80%)
			text-decoration none
	img 
		cursor pointer
		height 80px
		margin .5em 0 0 6em
		max-width 55px 


.social_icons
	height 2.6em
	text-align center
	width 20%
	a 
		text-decoration none
	img 
		margin 0.4em auto

.superior
	background transparent
	height 130px
	width 100%

.telefonos 
	width 30%
	span 
		margin 0 auto
		a 
			margin 0 4em 
			font-size .9em
			text-decoration none
.titulo 
	font-family 'Open Sans', Arial, Verdana 
	font-size 2em 
	text-shadow 0 .1em .2em azul

