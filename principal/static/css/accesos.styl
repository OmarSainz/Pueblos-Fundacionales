.contenido_accesos 
	background blanco
	height 750px
	margin .5em auto
	width 80%

.contenido_secciones_pueblos, .menu_secciones_pueblos
	background darken(blanco, 20%)
	display inline-block
	height 600px
	vertical-align top
	width 35%

.contenido_secciones_pueblos
	width 63%
	text-align center
	img 
		height 230px
		width 230px
	p 
		font-size 1.5em
		margin 1em auto

.menu_accesos, .pueblos_accesos
	background darken(azul, 10%)
	display inline-block
	height 700px
	vertical-align top
	width 24%

.menu_secciones_pueblos
	font-size .9em
	ul 
		margin-top .6em
		list-style none
	li 
		margin-left .5em
		margin-top .2em
		a 
			color darken(blanco, 70%)
			text-decoration none
			&:hover 
				color azul 
		li 
			margin-left 1em

.pueblos_accesos
	background darken(blanco, 10%)
	margin-left .2em
	width 75%