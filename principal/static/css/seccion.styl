@import "_var"
@import "_mixins"

.hoteles, .seccion_restaurantes, .seccion_centros, .seccion_curiosidades,
.seccion_pueblos, .seccion_eventos, .compras, .informacion_turistica, 
.visitabcs, .guias_turisticas
	display inline-block 
	vertical-align top 
	width 45%

.hoteles, .seccion_restaurantes, .seccion_centros, .seccion_curiosidades,
.seccion_pueblos, .seccion_eventos 
	border thin solid lighten(gris, 80%)
	height 150px
	margin-left 2%
	margin-top 2%
	margin-bottom 2%
	h4
		color azul
		font-size 1.2em
		margin-left 2%
	ul 
		list-style none
		li 
			color azul 
			font-weight normal
			margin 0 auto
			margin-left 10%

.informacion_turistica, .compras, .visitabcs, .guias_turisticas
	border thin solid lighten(gris, 80%)
	font-size .9em
	height 250px
	margin 2%
	text-align center
	h4 
		color azul 
		font-size 1.1em
	img 
		height 150px
		width 150px 


.menu_turistico 
	border thin solid lighten(gris, 80%)
	margin 2% auto
	width 95%

.pueblos_secciones
	background darken(blanco, 10%)
	width 75%

.redes_sociales
	margin 0 auto 
	width 95%
	article 
		border thin solid lighten(gris, 80%)
		bordes(.2em)
		height 80px
		margin .3em 
		margin-left 2%
		img 
			float left
			height 70px 
			margin .3em
			width 70px
		div 
			margin .4em
			h4 
				color rojizo
				font-size .9em
				margin-left 30%
			p 
				font-size .75em
				font-weight normal
				margin-left 30%

.seccion_curiosidades
	margin-left 2%

.seccion_centros, .seccion_curiosidades
	h4 
		color cafe
	ul li 
		color cafe

.seccion_pueblos, .seccion_eventos
	h4 
		color rojizo
	ul li 
		color rojizo

.secciones, .menu_secciones
	display inline-block  
	height auto
	margin 0 auto
	vertical-align top
	width 65%

.secciones 
	sombras-caja(.3em 0 .1em darken(blanco, 12%))
	h3
		width 30%
	p 
		font-size .9em
		font-weight normal
		margin-left 3%
		a 
			color rojizo
			font-weight bold
			text-decoration none 

.menu_secciones
	margin-left 1%
	width 32%

.sitios_turisticos
	border thin solid lighten(gris, 80%)
	margin 0 auto 
	max-width 95% 

.suscribete_redes
	border thin solid lighten(gris, 80%)
	height 150px
	margin-left .4em
	text-align center
	width 95%
	h3 
		color amarillo
	input[type="text"]
		background darken(blanco, 6%)
		border thin solid lighten(gris, 80%)
		bordes(.2em)
		color darken(blanco, 80%)
		margin-top .5em
		height 30px
		width 230px
	input[type="button"]
		bordes(.2em)
		background-image -webkit-gradient(linear, left top, left bottom, color-stop(0%, lighten(azul, 10%)), color-stop(100%, darken(azul, 20%)))
		background -ms-linear-gradient(top, lighten(azul, 10%) 0%, darken(azul, 20%) 100%)
		background -o-linear-gradient(top, lighten(azul, 10%) 0%, darken(azul, 20%) 100%)
		background -moz-linear-gradient(top, lighten(azul, 10%) 0%, darken(azul, 20%) 100%)
		background linear-gradient(top, lighten(azul, 10%) 0%, darken(azul, 20%) 100%)
		height 30px
		color blanco
		width 90px

