@import "_var"
@import "_mixins"

* 
	border 0 
	margin 0
	padding 0

body 
	background darken(gris2, 70%) url('../img/wallpaper-82838.jpg')
	background-repeat no-repeat no-repeat

h1, h2 
	color white
	margin .5em auto
	text-align center
	text-shadow .1em .1em .3em #333



section
	height 300px
	margin 0 auto
	width 90%

#arrow 
	height 15px
	margin .8em 0
	transform()
	width 15px

.conf_idiomas, .idiomas
	background darken(gris, 40%)
	box-sizing()
	font-family 'Open Sans', Verdana, Arial
	font-size()
	height 2.6em
	width 100%

.esp, .eng 
	display inline-block
	position relative
	top -20px
	vertical-align middle
	max-width 20%
	width 15%
	a 
		position relative 
		top -.5em

.idiomas, .social_icons 
	display inline-block
	margin 0 auto
	text-align right 
	vertical-align middle 
	width 60%

.idiomas 
	margin 0 0 0 5em
	a 
		color blanco 
		text-decoration none
	img 
		height 28px
		margin 1em .3em 0 0
		position relative 
		top 1px
		width 30px

.pueblosGen
	height 500px
	margin-top 3em
	width 80%


.pueblosEdit
	background #FFF 
	height 500px
	left 900px
	margin 0
	position relative
	top -500px
	width 20%

.social_icons
	height 2.6em
	text-align center
	width 20%
	a 
		text-decoration none
	img 
		margin 0.4em auto

/* Libros */
.contenedorLibros
	background gris2
	height 680px
	width 90%

.libro, .menuLibros
	display inline-block
	height 650px
	margin-top 1em
	margin-left 1em
	vertical-align top
	width 70%

.libro 
	background gris

.menuLibros 
	background azul
	margin-left 1em
	width 25%
	article 
		img 
			box-shadow .6em .4em .3em gris
			float left
			height 25%
			margin-left 1em
			width 40%
	p
		margin-top 6em
		text-align center
		img 
			width 90%